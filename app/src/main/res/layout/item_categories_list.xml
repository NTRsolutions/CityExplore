<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6dbec"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/food_textview"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="@string/category_food_text"
        android:textSize="25dp"
        android:layout_weight="1"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/outdoor_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/category_outdoors_text"
        android:textSize="25dp"
        android:layout_weight="1"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/shop_textview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/category_arts_text"
        android:textSize="25dp"
        android:layout_weight="1"
        android:gravity="center_horizontal" />

</LinearLayout>